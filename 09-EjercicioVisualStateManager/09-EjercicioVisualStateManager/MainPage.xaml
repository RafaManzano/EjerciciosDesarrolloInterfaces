<Page
    x:Class="_09_EjercicioVisualStateManager.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:_09_EjercicioVisualStateManager"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <RelativePanel>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="VisualStateGroup">
                <VisualState x:Name="grande">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="600"></AdaptiveTrigger>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--Posicion botones navegacion-->
                        <Setter Target="botones.(RelativePanel.AlignLeftWithPanel)" Value="True"></Setter>
                        <Setter Target="botones.(RelativePanel.AlignTopWithPanel)" Value="True"></Setter>
                        <Setter Target="botones.(RelativePanel.AlignBottomWithPanel)" Value="True"></Setter>
                        <Setter Target="botones.(StackPanel.Orientation)" Value="Vertical"></Setter>
                        <!--Posicion imagenes de la Galeria-->
                        <Setter Target="galeria.(RelativePanel.RightOf)" Value="botones"></Setter>
                        <Setter Target="scrollGaleria.(RelativePanel.RightOf)" Value="botones"></Setter>
                        <Setter Target="galeria.(RelativePanel.AlignBottomWithPanel)" Value="True"></Setter>
                        <Setter Target="galeria.(RelativePanel.AlignRightWithPanel)" Value="True"></Setter>
                        <Setter Target="img1.(Grid.Row)" Value="0"/>
                        <Setter Target="img1.(Grid.Column)" Value="0"/>
                        <Setter Target="img2.(Grid.Row)" Value="0"/>
                        <Setter Target="img2.(Grid.Column)" Value="1"/>
                        <Setter Target="img3.(Grid.Row)" Value="0"/>
                        <Setter Target="img3.(Grid.Column)" Value="2"/>
                        <Setter Target="img4.(Grid.Row)" Value="1"/>
                        <Setter Target="img4.(Grid.Column)" Value="0"/>
                        <Setter Target="img5.(Grid.Row)" Value="1"/>
                        <Setter Target="img5.(Grid.Column)" Value="1"/>
                        <Setter Target="img6.(Grid.Row)" Value="1"/>
                        <Setter Target="img6.(Grid.Column)" Value="2"/>
                        <Setter Target="img7.(Grid.Row)" Value="2"/>
                        <Setter Target="img7.(Grid.Column)" Value="0"/>
                        <Setter Target="img8.(Grid.Row)" Value="2"/>
                        <Setter Target="img8.(Grid.Column)" Value="1"/>
                        <Setter Target="img9.(Grid.Row)" Value="2"/>
                        <Setter Target="img9.(Grid.Column)" Value="2"/>
                    </VisualState.Setters>
                </VisualState>

                <VisualState x:Name="pequenio">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"></AdaptiveTrigger>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--Posicion botones-->
                        <Setter Target="botones.(RelativePanel.Orientation)" Value="Horizontal"></Setter>
                        <Setter Target="botones.(RelativePanel.AlignLeftWithPanel)" Value="True"></Setter>
                        <Setter Target="botones.(RelativePanel.AlignRightWithPanel)" Value="True"></Setter>
                        <Setter Target="botones.(RelativePanel.AlignTopWithPanel)" Value="True"></Setter>
                        <!--Posicion Imagenes-->
                        <Setter Target="galeria.(RelativePanel.Below)" Value="botones"></Setter>
                        <Setter Target="scrollGaleria.(RelativePanel.Below)" Value="botones"></Setter>
                        <Setter Target="galeria.(RelativePanel.AlignBottomWithPanel)" Value="True"></Setter>
                        <Setter Target="galeria.(RelativePanel.AlignRightWithPanel)" Value="True"></Setter>
                        <Setter Target="img1.(Grid.Row)" Value="0"/>
                        <Setter Target="img1.(Grid.Column)" Value="0"/>
                        <Setter Target="img2.(Grid.Row)" Value="1"/>
                        <Setter Target="img2.(Grid.Column)" Value="0"/>
                        <Setter Target="img3.(Grid.Row)" Value="2"/>
                        <Setter Target="img3.(Grid.Column)" Value="0"/>
                        <Setter Target="img4.(Grid.Row)" Value="3"/>
                        <Setter Target="img4.(Grid.Column)" Value="0"/>
                        <Setter Target="img5.(Grid.Row)" Value="4"/>
                        <Setter Target="img5.(Grid.Column)" Value="0"/>
                        <Setter Target="img6.(Grid.Row)" Value="5"/>
                        <Setter Target="img6.(Grid.Column)" Value="0"/>
                        <Setter Target="img7.(Grid.Row)" Value="6"/>
                        <Setter Target="img7.(Grid.Column)" Value="0"/>
                        <Setter Target="img8.(Grid.Row)" Value="7"/>
                        <Setter Target="img8.(Grid.Column)" Value="0"/>
                        <Setter Target="img9.(Grid.Row)" Value="8"/>
                        <Setter Target="img9.(Grid.Column)" Value="0"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <!--Panel de los botones de navegacion-->
        <StackPanel Name="botones" Background="LightBlue">
            <AppBarButton Icon="Add" Label="Añadir"></AppBarButton>
            <AppBarButton Icon="Go" Label="Ir"></AppBarButton>
            <AppBarButton Icon="Target" Label="Objetivo"/>
            <AppBarButton Icon="AddFriend" Label="Añadir"/>
        </StackPanel>

        <!--Panel de la galeria-->
        <ScrollViewer Name="scrollGaleria" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible" Height="auto">
            <Grid Name="galeria">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <!--Imagenes Galeria-->
                <Image Name="img1" Source="Assets/busta.jpg"></Image>
                <Image Name="img2" Source="Assets/busta.jpg"></Image>
                <Image Name="img3" Source="Assets/busta.jpg"></Image>
                <Image Name="img4" Source="Assets/busta.jpg"></Image>
                <Image Name="img5" Source="Assets/busta.jpg"></Image>
                <Image Name="img6" Source="Assets/busta.jpg"></Image>
                <Image Name="img7" Source="Assets/busta.jpg"></Image>
                <Image Name="img8" Source="Assets/busta.jpg"></Image>
                <Image Name="img9" Source="Assets/busta.jpg"></Image>
            </Grid>
        </ScrollViewer>

    </RelativePanel>
</Page>
